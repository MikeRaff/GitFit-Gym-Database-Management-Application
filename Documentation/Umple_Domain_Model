class GymUser
{
  
email;
password;
  * -> * Person;
abstract;
}

class Customer
{
  isA GymUser;
  Integer customerId;

  }

// Is there a need for staff?
class Staff  
{
  abstract;
  isA GymUser;
}

class Instructor
{
  isA Staff;
  Integer intructorId;
  }

class Owner
{
  isA Staff;
 
  Integer ownerId;
 

}

class Schedule
{
  int openTime;
  int closeTime; 
  1 <- * Session;
  * schedule -<@> 1 SportsRegistrationSystem;
  
  1 <- * Staff;
}

//Registration class for clients
// => those that want to participate in a session
// => includes all users (instead of switching accounts)
class CustomerRegistration
{
  Integer id;
Date date;
* -> 1 Session;
  * -> 1 Customer;
 

}

// start and end Times included as fields.
// Use 1h duration for all?
class Session
{
  Integer id;
  Date date;
  Time startTime;
  Time endTime;
  String description;
  String name;
  String location; 
  Time openingTime;
  Time closingTime;
  
}

class InstructorRegistration
{
  Integer id;
Date date;
* -> 1 Instructor;
  * -> 1 Session;
  

}

class ClassType
{
  1 <- * ClassTypeProposal;
  1 <- * Session;
  Integer id; // Necessary?? can use name for PK?
  String name;
 

  
}

class ClassTypeProposal
{
  Integer id;
name;
* -> 1 Instructor;
  * -> 1 Owner ;
   

  
}

class Person
{
  	name;
    * persons -<@> 1 SportsRegistrationSystem;

}
class SportsRegistrationSystem
{

}
